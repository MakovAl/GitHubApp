<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/repositoriesConstraint"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/repositoriesLinear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:scaleType="centerCrop"
                android:textColor="#4580c5"
                tools:targetApi="o"
                tools:text="Name" />

            <TextView
                android:id="@+id/language"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="18sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:scaleType="centerCrop"
                android:textColor="#673AB7"
                tools:targetApi="o"
                tools:text="Language" />
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:scaleType="centerCrop"
            android:text=""
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/repositoriesLinear"
            app:layout_constraintTop_toBottomOf="@id/repositoriesLinear"
            tools:targetApi="o"
            tools:text="Description" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
